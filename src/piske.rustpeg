use ast::*;
use sindra::PNode;
use sindra::float::float_ext;
use sindra::int::int_ext;
use sindra::string::{match_str_ext, convert_string};
use regex::Regex;

#[pub]
program -> PNode<Program>
    = b:block { PNode::new(Program(b)) }

#[pub]
block -> PNode<Block>
    = vec:(ws stmt:statement ws { stmt })* { PNode::new(Block(vec)) }

#[pub]
statement -> PNode<Statement>
    = declare_statement
    / assign_statement
    / fn_define_statement
    / expr:expression ws ";"? ws { PNode::new(Statement::Expression(expr)) }

fn_define_statement -> PNode<Statement>
    = kw_fn fn_ident:identifier ws '(' vec:(ws params:parameters { params }) ')' ws "->" ws
        ret_type:identifier ws "{" body:block "}" {
            PNode::new(Statement::FnDefine(FunctionDef { name: fn_ident,
                ret_type: ret_type, params: vec, body: body }))
        }

parameters -> Vec<PNode<Parameter>>
    = parameter_ws**","

parameter_ws -> PNode<Parameter>
    = ws p:parameter ws { p }

parameter -> PNode<Parameter>
    = ident:identifier ws ":" ws ty:identifier { PNode::new(Parameter { name: ident.clone(),
        ty: ty.clone() }) }

declare_statement -> PNode<Statement>
    = kw_let ident:identifier ws "=" expr:expression ws (";" ws)? {
        PNode::new(Statement::Declare(ident, expr))
    }

assign_statement -> PNode<Statement>
    = ident:identifier  ws "=" expr:expression ws (";" ws)? {
        PNode::new(Statement::Assign(ident, expr))
    }

//global_statement -> Statement
//    = kw_global ws id:identifier ws "(" ws expr:expression ws ")" ws (";" ws)? {
//        Statement::GlobalSet(id, expr)
//    }

keyword<k> = k !@"\p{XID_Continue}"@ ws
kw_let = keyword<"let">
kw_fn = keyword<"fn">
kw_global = keyword<"set">

kw = kw_let / kw_global / kw_fn;

type -> PNode<Identifier>
    = primitive_type / identifier

primitive_type -> PNode<Identifier>
    = 'real' { PNode::new(Identifier("real".to_string())) }
    / 'int' { PNode::new(Identifier("int".to_string())) }

#[pub]
arith_expression -> PNode<Expression>
    = infix_arith
    / signed_or_unsigned_primary

expression_ws -> PNode<Expression>
    = ws e:expression ws { e }

#[pub]
expression -> PNode<Expression>
    = i:identifier ws "(" ws pl:arg_list ws ")" {
        PNode::new(Expression::FnCall { name: i, args: pl })
    }
    / "{" ws b:block ws "}" { PNode::new(Expression::Block(b)) }
    / arith_expression
    / lit:literal { PNode::new(Expression::Literal(lit)) }

arg_list -> Vec<PNode<Expression>>
    = expression_ws**","

atom -> PNode<Expression>
    = ws n:num ws { PNode::new(Expression::Literal(n)) }
    / ws i:identifier ws { PNode::new(Expression::Identifier(i)) }
    / ws g:grouped_arith ws { g }

conjugated_atom -> PNode<Expression>
    = a:atom ws "`" {
        PNode::new(Expression::Postfix { op: PostfixOp::Conjugate, left: Box::new(a) })
    }

primary -> PNode<Expression>
    = ws c:conjugated_atom ws { c }
    / ws a:atom ws { a }

signed_primary -> PNode<Expression>
    = ws "+" p:primary {
        PNode::new(Expression::Prefix { op: PrefixOp::UnaryPlus, right: Box::new(p) })
     }
    / ws "-" p:primary {
        PNode::new(Expression::Prefix { op: PrefixOp::UnaryMinus, right: Box::new(p) })
    }

signed_or_unsigned_primary -> PNode<Expression>
    = primary
    / signed_primary

grouped_arith -> PNode<Expression>
    = "(" expr:arith_expression ")" { expr }

infix_arith -> PNode<Expression> = #infix<signed_or_unsigned_primary> {
    #L l "+" r {
        PNode::new(Expression::Infix { op: InfixOp::Add, left: Box::new(l), right: Box::new(r) })
    }
       l "-" r {
        PNode::new(Expression::Infix { op: InfixOp::Subtract, left: Box::new(l), right: Box::new(r) })
    }
    #L l "*" r {
        PNode::new(Expression::Infix { op: InfixOp::Multiply, left: Box::new(l), right: Box::new(r) })
    }
       l "/" r {
        PNode::new(Expression::Infix { op: InfixOp::Divide, left: Box::new(l), right: Box::new(r) })
    }
    #R l "^" r {
        PNode::new(Expression::Infix { op: InfixOp::Power, left: Box::new(l), right: Box::new(r) })
    }
}

ws = #quiet<(ws_char / eol / comment)*>

eol
    = "\n"
    / "\r\n"
    / "\r"
    / "\u{2028}"
    / "\u{2029}"

eol_char = [\n\r\u{2028}\u{2029}]

ws_char
    = [ \t\u{00A0}\u{FEFF}\u{1680}\u{180E}\u{2000}-\u{200A}\u{202F}\u{205F}\u{3000}]

comment
    = comment_single_line
    / comment_multi_line

comment_single_line
    = "//" (!eol_char .)*

comment_multi_line
    = "/*" (!"*/" .)* "*/"

#[pub]
literal -> PNode<Literal>
    = num
    / string

num -> PNode<Literal>
    = f:#ext<float> { PNode::new(Literal::Float(f)) }
    / i:#ext<int> { PNode::new(Literal::Int(i)) }

str -> String
    = s:#ext<match_str> {? convert_string(s) }

string -> PNode<Literal>
    = s:str { PNode::new(Literal::String(s)) }

identifier -> PNode<Identifier>
    = !kw s:@"\p{XID_Start}\p{XID_Continue}*"@ {
        PNode::new(Identifier(s.get(0).unwrap().as_str().to_string()))
    }
